{% extends 'sidebar.html.twig' %}

{% block title %}Gestion de mon département{% endblock %}

{% block page_contents %}

<!-- Partie centrale -->
<div class="fixed flex flex-col h-full ml-14 mb-10 md:ml-64 bg-slate-100 dark:bg-slate-800 dark:text-white w-full">

  <!-- Title (accueil) -->
  <div class="pl-24 py-14 pt-24">
      <p class="text-4xl">Département :</p>
      <p class="text-2xl indent-8">{{dpt.name}}</p>
      <a class="ml-7 border-b-0 border-l-4 border-blue-500 rounded-t-lg text-center bg-gradient-to-br from-blue-600 max-w-max py-2 px-10" href="{{ path('planned_departement')}}">Planning</a>
        
  </div>

<!-- Planning du user connecté -->
   <div class="py-4 md:py-7 px-4 md:px-8 xl:px-14">
        <div class="mt-7">
            <table class="mb-14 border-collapse table-auto text-sm border-2 text-center">
                <thead>    
                    <tr class="bg-slate-500 dark:bg-opacity-20 text-center">
                        <th class="border-t p-4 pl-8 text-slate-400 dark:text-slate-200">Prénom et nom</th>
                        <th class="border-t p-4 pl-8 text-slate-400 dark:text-slate-200">Job</th>
                        <th class="border-t p-4 pl-8 text-slate-400 dark:text-slate-200">Email pro</th>
                        <th class="border-r border-t p-4 pl-8 pr-8 text-slate-400 dark:text-slate-200">Téléphone pro</th>
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-slate-800">
         {% for user in dptUser %} 
                    <tr class="h-16 border border-gray-100 rounded text-center hover:bg-slate-600 hover:bg-opacity-70 hover:text-white">  
                        <td class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 dark:text-slate-200">{{ user.fullname }}</td>
                        <td class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 dark:text-slate-200">{{ user.job.name }}</td>
                        <td class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 dark:text-slate-200">{{ user.emailpro }}</td>
                        <td class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 dark:text-slate-200">{{ user.phonenumberpro }}</td>
                    </tr>
        {% endfor %} 
                </tbody>
            </table>
        </div>
    </div>
</div>


</div>

{% endblock %}
